import java.util.*;

class Solution {
    public int majorityElement(int[] nums) {
        Arrays.sort(nums);

        int n = nums.length;
        int count = 1;
        int ans = nums[0];

        for (int i = 1; i < n; i++) {
            if (nums[i] == nums[i - 1]) {
                count++;
            } else {
                count = 1;
                ans = nums[i];
            }

            if (count > n / 2) {
                return nums[i];
            }
        }

        return ans; // always exists in this problem
    }
}
