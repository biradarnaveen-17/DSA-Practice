class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {

        if (head == null) return null;

        ListNode dummy = new ListNode(0);
        dummy.next = head;

        int len = 0;
        ListNode fast = head;
        while (fast != null) {
            fast = fast.next;
            len++;
        }

        int d = len - n;
        ListNode slow = dummy;

        for (int i = 0; i < d; i++) {
            slow = slow.next;
        }

        slow.next = slow.next.next;

        return dummy.next;
    }
}
