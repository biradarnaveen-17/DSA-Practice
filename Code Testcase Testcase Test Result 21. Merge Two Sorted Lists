class Solution {
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        ListNode a=list1;
        ListNode b=list2;

        if(list1 == null && list2==null)
        {
            return null;
        }

        if(list1== null)
        {
            return list2;
        }
        else if(list2==null)
        {
            return list1;
        }

        ListNode head;
        ListNode prev;

        if(a.val <= b.val)
        {
            head=a;
            prev=a;
            a=a.next;
        }
        else
        {
            head=b;
            prev=b;
            b=b.next;
        }

        while(a!= null && b !=null)
        {
            if(a.val <=b.val)
            {
                prev.next=a;
                a=a.next;
            }
            else
            {
                prev.next=b;
                b=b.next;
            }
            prev = prev.next;

        }

        if(a!= null)
        {
            prev.next=a;
        }
        else
        {
            prev.next=b;
        }


        return head;
        
    }
}
