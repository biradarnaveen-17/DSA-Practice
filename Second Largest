class Solution {
    public int getSecondLargest(int[] arr) {
        // code here
        int a=arr[0],b=-1;
        for(int i=1;i<arr.length;i++)
        {
            if(a<arr[i])
            {
                b=a;
                a=arr[i];
            }
            else if(b<arr[i]&&a>arr[i])
            b=arr[i];
        }
        return b;
    }
}
